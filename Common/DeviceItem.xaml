<UserControl x:Class="KonnectUI.Common.DeviceItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KonnectUI.Common"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Grid.Column="0" Grid.Row="1" Height="Auto" Margin="30">
        <TextBlock Name="MainIcon" FontFamily="Segoe MDL2 Assets" Text="" TextAlignment="Center" FontSize="60" Margin="0,0,0,0"/>
        <TextBlock Name="MainTitle" Text="" TextAlignment="Center" FontSize="30" FontWeight="Thin" Margin="0,0,0,0" />
        <Button Name="AddButton" Content="Add New" FontSize="20" Background="Crimson" Padding="5" Foreground="White" FontWeight="Thin" HorizontalAlignment="Center" Margin="0,10,0,0" />
    </StackPanel>
</UserControl>
